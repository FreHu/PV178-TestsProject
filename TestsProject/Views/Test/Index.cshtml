@model IEnumerable<TestsProject.Models.Entities.TestParameters>

@{
	ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
	<tr>
		<th>
			@Html.DisplayNameFor(model => model.Name)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.TimeLimit)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.NumQuestions)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.OpenFrom)
		</th>
		<th>
			@Html.DisplayNameFor(model => model.OpenTo)
		</th>
		
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.TimeLimit) minutes
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.NumQuestions)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.OpenFrom)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.OpenTo)
			</td>
			<td>
				@Html.ActionLink("Start", "Take", new { id = item.Id }) 
			</td>
		</tr>
	}

</table>
