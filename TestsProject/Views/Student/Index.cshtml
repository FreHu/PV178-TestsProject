@{
	Layout = "~/Views/Shared/_Layout.cshtml";
	ViewBag.Title = "Student";
}
<br />
<br />
@if (ViewBag.ErrorMessage != null)
{
	<div class="alert alert-danger" role="alert">
		@ViewBag.ErrorMessage
	</div>
}

<div class="row">
	<div class="col-md-6">
		<h2>@Html.ActionLink("Groups", "Group", "Student")</h2>
		<p>
			View groups you are a member of, join new groups.
		</p>
	</div>
	<div class="col-md-6">
		<h2>@Html.ActionLink("Tests", "Index", "Test")</h2>
		<p>View tests you can take.</p>
	</div>
</div>
<div class="row">
	<div class="col-md-6">
		<h2>@Html.ActionLink("Past Tests", "PastTests", "Student")</h2>
		<p>
			View the results of your previous test attempts.
		</p>
	</div>
	<div class="col-md-6">
		
	</div>
</div>

